<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:background="@drawable/bleu"
    tools:context="lsinf1225.uclove.profile"
    tools:showIn="@layout/activity_profile">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="75dp"
        android:maxHeight="75dp"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:contentDescription="beer"
        android:src="@drawable/beer"
        android:id="@+id/buttontomain" />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="75dp"
        android:maxHeight="200dp"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:contentDescription="beer"
        android:src="@drawable/beer"
        android:id="@+id/buttontorequests"
        android:layout_above="@+id/headText"
        android:layout_toRightOf="@+id/buttontomain"
        android:layout_toEndOf="@+id/buttontomain" />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="75dp"
        android:maxHeight="200dp"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:contentDescription="beer"
        android:src="@drawable/beer"
        android:id="@+id/buttontofriends"
        android:layout_centerHorizontal="true" />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="75dp"
        android:maxHeight="200dp"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:contentDescription="beer"
        android:src="@drawable/beer"
        android:id="@+id/buttontoprofile"
        android:layout_above="@+id/headText"
        android:layout_toRightOf="@+id/buttontofriends"
        android:layout_toEndOf="@+id/buttontofriends" />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="75dp"
        android:maxHeight="200dp"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:contentDescription="beer"
        android:src="@drawable/beer"
        android:id="@+id/buttontosettings"
        android:layout_alignTop="@+id/buttontofriends"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mon Profil"
        android:textAllCaps="true"
        android:textSize="25dp"
        android:id="@+id/headText"
        android:textStyle="bold"
        android:layout_below="@+id/buttontofriends"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/BeerIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="200dp"
        android:maxHeight="200dp"
        android:adjustViewBounds="true"
        android:scaleType="fitStart"
        android:contentDescription="beer"
        android:src="@drawable/beer"
        android:layout_below="@+id/headText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
